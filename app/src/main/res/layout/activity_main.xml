<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="376dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:text="Calculadora de descontos"
        android:textAlignment="center"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:text="Nome do produto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/textView5"
        android:layout_marginTop="16dp"
        android:id="@+id/et_input1"
        android:textSize="22sp"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:text="Insira a % do desconto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_input1" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        android:id="@+id/et_input2"
        android:layout_marginTop="16dp"
        android:textSize="22sp"
        android:inputType="number"
        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:text="Valor do produto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_input2" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/textView6"
        android:layout_marginTop="16dp"
        android:id="@+id/et_input3"
        android:textSize="22sp"
        android:inputType="number"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="calcularDesconto"
        android:text="Calcular Desconto"
        android:textColor="#fff"
        android:background="#87027B"
        android:textSize="25sp"
        android:id="@+id/bt_01"
        app:layout_constraintTop_toBottomOf="@id/et_input3"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Texto Invisivel"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/bt_01"
        android:textSize="20sp"
        android:id="@+id/tv_resultado"
        />


</androidx.constraintlayout.widget.ConstraintLayout>